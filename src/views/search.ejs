<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movie Search - Movie Watchlist</title>
    <link rel="stylesheet" href="/css/style.css" />
    <style>
      .search-container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 20px;
      }

      .search-header {
        text-align: center;
        margin-bottom: 40px;
      }

      .search-header h1 {
        font-size: 2.5em;
        margin-bottom: 10px;
        color: #333;
      }

      .search-header p {
        color: #666;
        font-size: 1.1em;
      }

      .search-form {
        max-width: 600px;
        margin: 0 auto 40px;
      }

      .search-input-group {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
      }

      .search-input-group input {
        flex: 1;
        padding: 15px;
        font-size: 1.1em;
        border: 2px solid #ddd;
        border-radius: 8px;
        transition: border-color 0.3s;
      }

      .search-input-group input:focus {
        outline: none;
        border-color: #007bff;
      }

      .search-btn {
        padding: 15px 30px;
        font-size: 1.1em;
        background: #007bff;
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background 0.3s;
      }

      .search-btn:hover {
        background: #0056b3;
      }

      .search-btn:disabled {
        background: #ccc;
        cursor: not-allowed;
      }

      .results-info {
        text-align: center;
        margin-bottom: 20px;
        color: #666;
        font-size: 1.1em;
      }

      .movie-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 20px;
        margin-top: 30px;
      }

      .movie-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition:
          transform 0.3s,
          box-shadow 0.3s;
        cursor: pointer;
      }

      .movie-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
      }

      .movie-poster {
        width: 100%;
        aspect-ratio: 2/3;
        object-fit: cover;
        background: #f0f0f0;
      }

      .movie-poster.placeholder {
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        font-size: 3em;
      }

      .movie-info {
        padding: 15px;
      }

      .movie-title {
        font-size: 1em;
        font-weight: bold;
        margin-bottom: 8px;
        color: #333;
        line-height: 1.3;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }

      .movie-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.9em;
        color: #666;
      }

      .movie-year {
        color: #999;
      }

      .movie-rating {
        display: flex;
        align-items: center;
        gap: 4px;
        color: #f39c12;
        font-weight: bold;
      }

      .error-message {
        text-align: center;
        padding: 30px;
        background: #fff3cd;
        border: 1px solid #ffc107;
        border-radius: 8px;
        color: #856404;
        margin: 20px 0;
      }

      .loading-message {
        text-align: center;
        padding: 60px;
        font-size: 1.2em;
        color: #666;
      }

      .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #999;
      }

      .empty-state svg {
        width: 100px;
        height: 100px;
        margin-bottom: 20px;
        opacity: 0.3;
      }

      .popular-section {
        margin-top: 60px;
        padding-top: 40px;
        border-top: 2px solid #eee;
      }

      .popular-section h2 {
        text-align: center;
        font-size: 2em;
        margin-bottom: 30px;
        color: #333;
      }

      nav {
        background: #2c3e50;
        padding: 15px 0;
      }

      nav .container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 20px;
      }

      nav a {
        color: white;
        text-decoration: none;
        padding: 8px 15px;
        border-radius: 5px;
        transition: background 0.3s;
      }

      nav a:hover {
        background: rgba(255, 255, 255, 0.1);
      }

      .nav-links {
        display: flex;
        gap: 15px;
        list-style: none;
        margin: 0;
        padding: 0;
      }
    </style>
  </head>
  <body>
    <nav>
      <div class="container">
        <a href="/" class="logo" style="font-weight: bold; font-size: 1.2em"
          >Movie Watchlist</a
        >
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li><a href="/search">Search Movies</a></li>
          <li><a href="/history">History</a></li>
          <li><a href="/settings">Settings</a></li>
        </ul>
      </div>
    </nav>

    <div class="search-container">
      <div class="search-header">
        <h1>üé¨ Search Movies</h1>
        <p>Powered by The Movie Database (TMDB) API</p>
      </div>

      <form class="search-form" id="searchForm">
        <div class="search-input-group">
          <input
            type="text"
            id="searchInput"
            name="query"
            placeholder="Search for a movie..."
            required
            autocomplete="off"
          />
          <button type="submit" class="search-btn" id="searchBtn">
            Search
          </button>
        </div>
      </form>

      <div id="resultsInfo" class="results-info" style="display: none"></div>
      <div id="errorMessage" class="error-message" style="display: none"></div>
      <div id="loadingMessage" class="loading-message" style="display: none">
        Loading...
      </div>

      <div id="movieGrid" class="movie-grid"></div>

      <div class="popular-section" id="popularSection">
        <h2>üî• Popular Movies</h2>
        <div id="popularGrid" class="movie-grid"></div>
      </div>
    </div>

    <script>
      const searchForm = document.getElementById('searchForm');
      const searchInput = document.getElementById('searchInput');
      const searchBtn = document.getElementById('searchBtn');
      const movieGrid = document.getElementById('movieGrid');
      const popularGrid = document.getElementById('popularGrid');
      const resultsInfo = document.getElementById('resultsInfo');
      const errorMessage = document.getElementById('errorMessage');
      const loadingMessage = document.getElementById('loadingMessage');
      const popularSection = document.getElementById('popularSection');

      // Load popular movies on page load
      window.addEventListener('DOMContentLoaded', loadPopularMovies);

      // Handle search form submission
      searchForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const query = searchInput.value.trim();

        if (!query) return;

        await searchMovies(query);
      });

      async function searchMovies(query) {
        try {
          // Show loading state
          loadingMessage.style.display = 'block';
          movieGrid.innerHTML = '';
          resultsInfo.style.display = 'none';
          errorMessage.style.display = 'none';
          popularSection.style.display = 'none';
          searchBtn.disabled = true;

          // Fetch search results from server
          const response = await fetch(
            `/api/search/movies?query=${encodeURIComponent(query)}`
          );
          const data = await response.json();

          loadingMessage.style.display = 'none';
          searchBtn.disabled = false;

          if (!data.success) {
            showError(data.error || 'Failed to search movies');
            return;
          }

          // Display results
          if (data.results.length === 0) {
            movieGrid.innerHTML = `
            <div class="empty-state" style="grid-column: 1 / -1;">
              <h3>No movies found</h3>
              <p>Try searching with different keywords</p>
            </div>
          `;
          } else {
            resultsInfo.textContent = `Found ${data.total_results} results for "${query}"`;
            resultsInfo.style.display = 'block';
            displayMovies(data.results, movieGrid);
          }
        } catch (error) {
          console.error('Search error:', error);
          loadingMessage.style.display = 'none';
          searchBtn.disabled = false;
          showError('An error occurred while searching. Please try again.');
        }
      }

      async function loadPopularMovies() {
        try {
          const response = await fetch('/api/movies/popular');
          const data = await response.json();

          if (data.success && data.results.length > 0) {
            displayMovies(data.results.slice(0, 12), popularGrid);
          }
        } catch (error) {
          console.error('Error loading popular movies:', error);
        }
      }

      function displayMovies(movies, container) {
        container.innerHTML = movies
          .map((movie) => {
            const posterUrl = movie.poster_path
              ? `https://image.tmdb.org/t/p/w300${movie.poster_path}`
              : null;

            const year = movie.release_date
              ? new Date(movie.release_date).getFullYear()
              : 'N/A';
            const rating = movie.vote_average
              ? movie.vote_average.toFixed(1)
              : 'N/A';

            return `
          <div class="movie-card" onclick="showMovieDetails(${movie.id})">
            ${
              posterUrl
                ? `<img src="${posterUrl}" alt="${movie.title}" class="movie-poster">`
                : `<div class="movie-poster placeholder">üé¨</div>`
            }
            <div class="movie-info">
              <div class="movie-title">${movie.title}</div>
              <div class="movie-meta">
                <span class="movie-year">${year}</span>
                <span class="movie-rating">‚≠ê ${rating}</span>
              </div>
            </div>
          </div>
        `;
          })
          .join('');
      }

      function showMovieDetails(tmdbId) {
        // You can implement a modal or redirect to a details page
        console.log('Movie TMDB ID:', tmdbId);
        alert(
          `Movie details for TMDB ID: ${tmdbId}\nYou can add this to your watchlist!`
        );
        // Future: Could open a modal with more details and "Add to Watchlist" button
      }

      function showError(message) {
        errorMessage.textContent = message;
        errorMessage.style.display = 'block';
        popularSection.style.display = 'block';
      }
    </script>
  </body>
</html>
